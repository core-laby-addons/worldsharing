.container {
  width: 350;
  height: fit-content;
  min-width: fit-content;
  min-height: fit-content;
  min-width: fit-content;
  min-height: fit-content;

  alignment-x: center;
  alignment-y: center;
  space-between-entries: 5;

  border: 1 white;
  padding: 15;
  margin: 0 0 10 0;
  background-color: rgba(0, 0, 0, 200);

  .title {
    width: fit-content;
    height: fit-content;
    font-size: 1;
  }
  .info {
      width: fit-content;
      alignment-x: center;
  }

  .sides {
    width: fit-content;
    height: fit-content;
    space-between-entries: 15;
    orientation: horizontal;

    Hr {
        width: 0.5;
        height: 100%;
    }
  }
}


.player-management {
    height: 100%;
    width: 270;
    min-width: fit-content;
    border: 1 dark_gray;

    .text {
        alignment-x: center;
        margin: 2 0 5 0;
    }

    space-between-entries: 1;

    .players-scroll {
        height: 87%;
        width: 100%;
        margin: 0 5 0 5;

        Scrollbar {
            width: 3;
        }

    }

    .players {
        height: fit-content;
        width: 100%;

        space-between-entries: 7;
        .player {
            height: fit-content;
            width: fit-content;

            orientation: horizontal;

            Component {
                padding-top: 2;
                padding-left: 4;
            }

            Icon {
                height: 16;
                width: 16;
            }
            .buttons {
                height: 15;
                width: fit-content;
                padding-left: 4;
                orientation: horizontal;
                space-between-entries: 5;

                Dropdown {
                    height: 15;
                    width: fit-content;
                    Component {
                        padding: 3;
                    }
                }
                Button {
                    height: 15;
                    width: fit-content;
                    Component {
                        padding: 3;
                    }
                }
            }
        }
    }
}

.button-container {
    height: fit-content;
    width: fit-content;
    alignment-x: center;
    space-between-entries: 10;

    orientation: horizontal;

    Button {
        height: 15;
        min-width: 50;
        width: fit-content;
        alignment-x: center;
    }

}


.options {
    width: 210;
    height: fit-content;
    padding: 10 3 10 3;
    space-between-entries: 5;
    border: 1 dark_gray;
}

.option {
    height: fit-content;
    width: 100%;
    padding: 0 0 0 10;
    layout: spread;

    .slotscontainer {
        Slider {
            min-width: 62;
            width: fit-content;
            height: 14;
        }

        Button {
            min-width: 30;
            width: fit-content;
            height: 14;
        }
        orientation: horizontal;
        space-between-entries: 5;
    }

    .widget {
        min-width: 110;
        width: fit-content;
        height: 14;
    }

    .label {
        margin-top: 2;
    }

    .port-input {
        min-width: 100 !important;
    }

}
